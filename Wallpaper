from colorama import Fore, Back , Style, init
print(Fore.GREEN +"How many miles do you want to convert? ")
kim = input()
mal = float(kim) / 1.60934
mal = round( mal, 2)
print(Fore.YELLOW+ f"{kim}Km is {mal}miles")
print("_______________")
