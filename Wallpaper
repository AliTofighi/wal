x = 6
if x ==1:
 print (Fore.YELLOW+ f"{name} You won first place ")
elif x == 2:
  print(Fore.GREEN + f"{name} You won Second place ")
else:
 print(Fore.RED + f"{name} You are not rated. ")
 
